{
  "name": "ddr-calc",
  "version": "9.0.1",
  "description": "Calculator with DDR speed-modifier specific functionality; fast and offline PWA",
  "scripts": {
    "clean": "rm -rf build",
    "copy": "mkdir -p build/img && cp -R src/*.* src/.well-known src/.htaccess src/_headers build/ && cp src/img/*.png build/img/ && cp src/games.json build/games.v$npm_package_version.json && cp src/404.css build/404.css",
    "merge-svg": "echo '<svg xmlns=\"http://www.w3.org/2000/svg\">' > build/img/icons.v$npm_package_version.svg && sed -e 's/<\\/svg>//' -e 's/<svg[^>]*>//' src/img/*.svg >> build/img/icons.v$npm_package_version.svg && echo '</svg>' >> build/img/icons.v$npm_package_version.svg",
    "prebuild": "pnpm run clean && pnpm run copy && pnpm run merge-svg",
    "minify:fe": "esbuild src/js/*.js src/css/*.css --outdir=build --minify --target=es2018 --sourcemap --out-extension:.js=.v$npm_package_version.js --out-extension:.css=.v$npm_package_version.css --define:window.APP_VERSION=\\\"$npm_package_version\\\" --define:window.SVG_SPRITE_SHEET=\\\"icons.v$npm_package_version\\\"",
    "minify:sw": "esbuild src/sw.js --outdir=build --minify --target=es2018 --sourcemap --define:self.APP_VERSION=\\\"$npm_package_version\\\" --define:self.SVG_SPRITE_SHEET=\\\"icons.v$npm_package_version\\\"",
    "minify": "pnpm run minify:fe && pnpm run minify:sw",
    "replace": "rexreplace '/([a-z-]+).(js|css|json)(>|\")' /\\$1.v$npm_package_version.\\$2\\$3 build/index.html",
    "build": "pnpm run minify && pnpm run replace",
    "serve:src": "pnpm dlx wrangler@4.42.0 pages dev ./src --port=3000 --compatibility-date=2025-09-15",
    "serve:build": "pnpm dlx wrangler@4.42.0 pages dev ./build --port=3000 --compatibility-date=2025-09-15",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Andrew67/ddr-calc.git"
  },
  "author": {
    "name": "Andr√©s Cordero",
    "email": "andres@andrew67.com",
    "url": "https://andrew67.com/"
  },
  "license": "GPL-3.0-only",
  "private": true,
  "bugs": {
    "url": "https://github.com/Andrew67/ddr-calc/issues"
  },
  "homepage": "https://github.com/Andrew67/ddr-calc#readme",
  "dependencies": {
    "@capacitor/android": "7.4.3",
    "@capacitor/core": "7.4.3",
    "@capacitor/splash-screen": "^7.0.3"
  },
  "devDependencies": {
    "@capacitor/cli": "7.4.3",
    "esbuild": "0.25.10",
    "eslint": "9.37.0",
    "eslint-plugin-compat": "6.0.2",
    "prettier": "3.6.2",
    "rexreplace": "7.1.13",
    "stylelint": "16.25.0",
    "stylelint-no-unsupported-browser-features": "8.0.4"
  },
  "packageManager": "pnpm@10.18.2"
}
